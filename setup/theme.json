{
    "title": "Freelancer BS3",
    "version": "1.01",
    "doctype": "HTML5",
    "thumbnail": "thumbnail.png",
    "author": "Iván Campaña",
    "widget": {
        "image": {
            "width": 1180,
            "height": 400
        },
        "gallery": {
            "width": 295,
            "height": 164
        }
    },

    "options": [
     {
       "label": "Navbar Inverse",
       "type": "group",
       "options": [
