{
    "title": "Freelancer BS3",
    "version": "1.01",
    "doctype": "HTML5",
    "thumbnail": "thumbnail.png",
    "author": "Iván Campaña",
    "widget": {
        "image": {
            "width": 1180,
            "height": 400
        },
        "gallery": {
            "width": 295,
            "height": 164
        }
    },

    "options": [
     {
       "label": "Color Scheme",
       "type": "group",
       "options": [
        {
            "label": "Default Color Scheme",
            "name": "colorScheme",
            "type": "select",
            "default": "Red",
            "values": ["Red", "Green", "Pink", "Mocha"]
        },

         {
            "label": "Header Background Color",
            "name": "navbar-inverse-bg",
            "type": "color",
            "default": "#222"
         },

         {
            "label": "Footer",
            "name": "footer-bg",
            "type": "color",
            "default": "#080808"
         }
       ]
     },
     {
        "label": "General",
        "type": "group",
        "options": [

        {
            "label": "Text color",
            "name": "textColor",
            "type": "color",
            "default": "#000"
        },

        {
            "label": "Body background color",
            "name": "bodyBackgroundColor",
            "type": "color",
            "default": "#fff"
        },

        {
            "label": "Lightbox style",
            "name": "lightboxStyle",
            "type": "select",
            "default": "2",
            "values": [1, 2, 3, 4, 5]
        }


       ]
     }

    ]

}
